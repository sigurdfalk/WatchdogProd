<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.ntnu.idi.watchdogprod" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/telenor_logo_blue_scaled"
        android:label="@string/app_name"
        android:theme="@style/Watchdog" >

        <activity android:name=".PrivacyNoticeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ApplicationListActivity"
            android:label="@string/applications" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".ApplicationDetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ApplicationListActivity" />
        </activity>
        <activity android:name=".RuleViolationsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ApplicationDetailActivity" />
        </activity>
        <activity
            android:name=".DataUsageActivity"
            android:label="@string/title_activity_data_usage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ApplicationDetailActivity" />
        </activity>
        <activity android:name=".PermissionListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ApplicationDetailActivity" />
        </activity>
        <activity android:name=".ApplicationUpdateLogActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ApplicationDetailActivity" />
        </activity>

        <receiver
            android:name=".receivers.ApplicationInstalledReceiver"
            android:label="NewAppInstalledReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <service android:name=".services.DataUsageService" />
        <service android:name=".services.DataUsagePosterService" />

        <activity
            android:name=".UserQuestionActivity"
            android:label="@string/title_activity_user_question" >
        </activity>
    </application>

</manifest>
