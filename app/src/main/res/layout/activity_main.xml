<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ripple_material_light"
    android:id="@+id/main_layout">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_analysis"
            android:id="@+id/main_privacy_analysis_btn" />

        <LinearLayout
            android:id="@+id/main_tips"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/ripple_material_light"
            android:weightSum="100">

            <ImageView
                android:id="@+id/infor"
                android:src="@mipmap/ic_info_outline_white_48dp"
                android:tint="@color/material_blue_grey_800"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="5" />

            <TextView
                android:text="For å ytterligere øke sikkerheten på telefonen kan du aktivere skjermlås. Dette hindrer fri adgang til telefonen hvis du skulle miste den."
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="90" />

            <ImageView
                android:id="@+id/main_cancel_tips"
                android:src="@drawable/ic_close_circle_outline_grey600_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/material_blue_grey_800"
                android:layout_gravity="center_vertical"
                android:layout_weight="5" />
        </LinearLayout>

        <TextView
            android:text="Total Score: 55/100"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
           >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50">

                <ImageView
                    android:src="@mipmap/ic_apps_grey600_48dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:tint="@color/material_blue_grey_800"
                    android:layout_gravity="center" />

                <TextView
                    android:text="Apper"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50">

                <ImageView
                    android:src="@drawable/ic_trending_up_black_48dp"
                    android:tint="@color/material_blue_grey_800"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center" />

                <TextView
                    android:text="Trender"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50">

                <ImageView
                    android:src="@mipmap/ic_format_list_bulleted_grey600_48dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:tint="@color/material_blue_grey_800"
                    android:layout_gravity="center" />

                <TextView
                    android:text="Alle tillatelser"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50">

                <ImageView
                    android:src="@mipmap/ic_information_outline_grey600_48dp"
                    android:tint="@color/material_blue_grey_800"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:text="Om"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

            <!--<ListView-->
            <!--android:divider="@null"-->
            <!--android:id="@+id/profile_behavior_list"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent" />-->
        </LinearLayout>
    </ScrollView>
    </LinearLayout>