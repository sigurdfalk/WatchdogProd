<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_material_light"
    android:id="@+id/main_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_analysis"
            android:id="@+id/main_privacy_analysis_btn" />

        <LinearLayout
            android:id="@+id/main_tips"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/ripple_material_light"
            android:weightSum="100">

            <ImageView
                android:id="@+id/infor"
                android:src="@mipmap/ic_info_outline_white_48dp"
                android:tint="@color/material_blue_grey_800"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="5" />

            <TextView
                android:text="For å ytterligere øke sikkerheten på telefonen kan du aktivere skjermlås. Dette hindrer fri adgang til telefonen hvis du skulle miste den."
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="90" />

            <ImageView
                android:id="@+id/main_cancel_tips"
                android:src="@drawable/ic_close_circle_outline_grey600_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/material_blue_grey_800"
                android:layout_gravity="center_vertical"
                android:layout_weight="5" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nåværende status"
            android:textColor="@color/material_blue_grey_900"
            android:textSize="20dp" />

        <ImageView
            android:src="@drawable/siggen"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:textColor="@color/material_blue_grey_900"
            android:text="Du har oppnådd: Siggen"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <TextView
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:text="Siste aktivitet"
            android:background="@color/ripple_material_light"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/latest_activity"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Du installerte Facebook, som kan være en potensiell trussel mot din personlige informasjon" />

        <ListView
        android:divider="@null"
        android:id="@+id/profile_behavior_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

    </LinearLayout>
</LinearLayout>