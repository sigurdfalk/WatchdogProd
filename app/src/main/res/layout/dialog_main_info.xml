<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10sp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:gravity="center"
        android:text="@string/dialog_main_score_header"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/dialog_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:text="@string/dialog_main_score_text"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/dialog_text" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:gravity="center"
        android:text="@string/dialog_main_cards_header"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/dialog_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:text="@string/dialog_main_cards_text"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/dialog_text" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:gravity="center"
        android:text="@string/dialog_main_color_codes_header"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/dialog_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:text="@string/dialog_main_color_codes_text"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/dialog_text" />

</LinearLayout>