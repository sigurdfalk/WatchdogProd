<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rule_violations_list"/>

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/rule_violations_empty">

        <ImageView
            android:layout_width="@dimen/button_flat_icon_large"
            android:layout_height="@dimen/button_flat_icon_large"
            android:src="@mipmap/ic_emoticon_happy_white_48dp"
            android:tint="@color/button_flat_icon_tint"
            android:layout_marginBottom="5sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_app_risk_indikators"
            android:gravity="center"
            android:textSize="@dimen/button_flat_header"
            android:textColor="@color/button_flat_header"
            android:layout_marginBottom="5sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/button_flat_text"
                android:text="@string/for_more_risk_indicator_info_touch"
                android:textSize="@dimen/button_flat_text_primary"/>

            <ImageView
                android:layout_width="@dimen/button_flat_icon_match_text_primary"
                android:layout_height="@dimen/button_flat_icon_match_text_primary"
                android:src="@mipmap/ic_info_outline_white_48dp"
                android:layout_marginLeft="5sp"
                android:tint="@color/button_flat_icon_tint"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>